{
  "manifest_version": 3,
  "name": "KeyFlip: Keyboard Layout Fix",
  "version": "1.0",
  "description": "Fix text typed in the wrong keyboard layout (Hebrew ↔ English).",
  "permissions": ["scripting", "activeTab", "commands"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background.js"
  },
  "commands": {
    "fix-layout": {
      "suggested_key": { "default": "Ctrl+Shift+L" },
      "description": "Convert selected text Hebrew ↔ English"
    }
  },
  "action": { "default_title": "KeyFlip" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/mapping.js", "src/content.js"],
      "run_at": "document_idle"
    }
  ]
}